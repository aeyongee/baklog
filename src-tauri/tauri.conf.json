{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Baklog",
  "version": "0.1.0",
  "identifier": "com.baklog.app",
  "build": {
    "frontendDist": ".next",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Baklog - Eisenhower Today Planner",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/next-server"
    ],
    "resources": [
      "../.next/standalone/**",
      "../prisma/schema.prisma"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["baklog"]
      }
    },
    "shell": {
      "open": true
    }
  }
}
