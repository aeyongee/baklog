{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Baklog",
  "version": "0.1.0",
  "identifier": "com.baklog.app",
  "build": {
    "frontendDist": "../dist-placeholder",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "Baklog - 일잘러로 거듭나기 위한 작업 관리 서비스",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["next-bundle/", "../prisma/schema.prisma"],
    "externalBin": ["binaries/node"],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
