generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  draft
  classified
  active
  completed
  discarded
}

enum Quadrant {
  Q1
  Q2
  Q3
  Q4
}

enum TaskOrigin {
  new
  carry_over
  backlog
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())

  tasks      Task[]
  dailyPlans DailyPlan[]
  preference UserPreference?
  feedbacks  Feedback[]
}

model Task {
  id      String @id @default(cuid())
  userId  String
  rawText String

  // AI classification results
  aiImportance Float?
  aiUrgency    Float?
  aiQuadrant   Quadrant?
  aiConfidence Float?
  aiReason     String?

  // User-corrected final values (nullable until user confirms)
  finalImportant Boolean?
  finalUrgent    Boolean?
  finalQuadrant  Quadrant?

  status      TaskStatus @default(draft)
  createdAt   DateTime   @default(now())
  completedAt DateTime?

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyPlanTasks DailyPlanTask[]
  feedbacks      Feedback[]

  @@index([userId])
}

model DailyPlan {
  id          String    @id @default(cuid())
  userId      String
  date        DateTime  @db.Date
  createdAt   DateTime  @default(now())
  finalizedAt DateTime?

  user  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks DailyPlanTask[]

  @@unique([userId, date])
  @@index([userId])
}

model DailyPlanTask {
  id          String     @id @default(cuid())
  dailyPlanId String
  taskId      String
  origin      TaskOrigin

  dailyPlan DailyPlan @relation(fields: [dailyPlanId], references: [id], onDelete: Cascade)
  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([dailyPlanId, taskId])
  @@index([dailyPlanId])
  @@index([taskId])
}

model UserPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  keywordWeights Json     @default("{}")
  importanceBias Float    @default(0)
  urgencyBias    Float    @default(0)
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Feedback {
  id            String   @id @default(cuid())
  userId        String
  taskId        String
  aiQuadrant    Quadrant
  finalQuadrant Quadrant
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([taskId])
}
